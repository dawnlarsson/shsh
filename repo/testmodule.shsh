# Test module for module system tests

double() {
  R=$(($1 * 2))
}

triple() {
  R=$(($1 * 3))
}

greet() {
  if "$1" == ""
    R="Hello!"
  else
    R="Hello, $1!"
  end
}

internal_helper() {
  R="helper"
}

uses_internal() {
  internal_helper
  R="used: $R"
}

chain_a() {
  R="a"
}

chain_b() {
  chain_a
  R="${R}b"
}

chain_c() {
  chain_b
  R="${R}c"
}
